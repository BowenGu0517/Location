<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unsw.gps_location.Start_location">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Distance"
        android:id="@+id/get_distance"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Lo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignEnd="@+id/textView"
        android:gravity="center" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_above="@+id/edit_Lo"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/get_distance" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_La"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/get_distance"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set reference Location"
        android:id="@+id/set_ref"
        android:layout_below="@+id/edit_Lo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="See in GOOGLE MAP"
        android:id="@+id/googlemap"
        android:layout_above="@+id/current_location"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Current Location"
        android:id="@+id/current_location"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_above="@+id/get_current_location"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Current Location"
        android:id="@+id/get_current_location"
        android:layout_above="@+id/distance"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Distance"
        android:id="@+id/distance"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/get_distance"
        android:gravity="center"
        android:textSize="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set location from GOOGLE MAP"
        android:id="@+id/set_location_google"
        android:layout_below="@+id/set_ref"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reference Location"
        android:id="@+id/lo_la_ref"
        android:layout_above="@+id/googlemap"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_location_google"
        android:gravity="center"
        android:textSize="15dp" />

</RelativeLayout>

